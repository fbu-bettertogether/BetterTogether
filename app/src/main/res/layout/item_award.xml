<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">

    <ImageView
        android:id="@+id/ivAwardImage"
        android:layout_width="75dp"
        android:layout_height="75dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/medal" />

    <TextView
        android:id="@+id/tvAwardName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:text="Award"
        android:typeface="serif"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toStartOf="@+id/ivAwardImage"
        app:layout_constraintEnd_toEndOf="@+id/ivAwardImage"
        app:layout_constraintTop_toBottomOf="@id/ivAwardImage" />

</androidx.constraintlayout.widget.ConstraintLayout>
